{
  "manifest_version": 3,
  "name": "GPT Extension",
  "version": "1.0",
  "description": "Search ChatGPT for selected text",
  "permissions": [
    "contextMenus", 
    "scripting", 
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "icons/Group 8999.png",
    "48": "icons/Group 8999.png",
    "128": "icons/Group 8999.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/Group 8999.png",
      "48": "icons/Group 8999.png",
      "128": "icons/Group 8999.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ]
}